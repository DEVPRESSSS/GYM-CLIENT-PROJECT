<Window x:Class="GYM_CLIENT.Auth.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GYM_CLIENT.Auth" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="ChangePassword" 
         Height="457"
          Width="705"
          WindowStartupLocation="CenterScreen"
          WindowStyle="None"
          Background="Transparent"
          AllowsTransparency="True"
          ResizeMode="NoResize"
        >
   
    <Border Background="White"
>

        <Border Background="White" BorderThickness="3">



            <Grid>


                <Grid.RowDefinitions>

                    <RowDefinition/>

                </Grid.RowDefinitions>


                <Grid Grid.Row="0">


                    <!--Grid for column definition-->
                    <Grid.ColumnDefinitions>

                        <!--First column-->
                        <ColumnDefinition />

                        <!--Second column-->
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>



                    <!--Image for the first column of row 2-->
                    <Image 
                              Grid.Column="0"
                              HorizontalAlignment="Left" Stretch="Fill"
                              Source="pack://application:,,,/Resources/ChangePassIcon.png"/>

                    <!--Grid for the column 1-->
                    <Grid Grid.Row="0" Grid.Column="1">



                        <Grid.RowDefinitions>

                            <!--Row that holds the the three columns-->
                            <RowDefinition Height="30"/>
                            <RowDefinition/>

                        </Grid.RowDefinitions>

                        <!--Border for the row 1-->
                        <Border BorderBrush="Black" Grid.Row="0">



                        </Border>


                        <Grid>


                            <Grid.ColumnDefinitions>


                                <!--Minimize button column-->
                                <ColumnDefinition/>

                                <!--Maximize button column-->
                                <ColumnDefinition/>

                                <!--Close button column-->
                                <ColumnDefinition/>

                            </Grid.ColumnDefinitions>

                            <!--Close button-->


                            <Button x:Name="CloseBtn"
                                 Style="{StaticResource MinimizeButtonStyle}"
                                 Grid.Column="2"
                                 HorizontalAlignment="Right"
                                 Margin="0,0,4,0"
                                 Cursor="Hand"
                                 Click="CloseBtn_Click">

                                <Icon:PackIconMaterial 
                                      Kind="ArrowLeftBold" 
                                      VerticalAlignment="Center"
                                      Height="10"
                                      HorizontalAlignment="Right"
                                      Width="16"
                                  />


                            </Button>

                        </Grid>

                        <!--Dumbbel icon-->
                        <Icon:PackIconMaterial 
                                   Kind="Dumbbell"
                                   Margin="0,10,42,0"
                                   Height="32" RenderTransformOrigin="0.803,0.533"
                                   HorizontalAlignment="Right"
                                   Width="44" Grid.Row="1"
                             />

                        <!--Email icon-->
                        <Icon:PackIconMaterial 
                              Kind="Lock"
                              Margin="0,180,262,0"
                              Height="16" RenderTransformOrigin="0.803,0.533"
                              HorizontalAlignment="Right"
                              Width="36" Grid.Row="1"/>


                        <!--Email icon-->
                        <Icon:PackIconMaterial 
                               Kind="Lock"
                               Margin="0,276,270,0"
                               Height="15" RenderTransformOrigin="0.803,0.533"
                               HorizontalAlignment="Right"
                               Width="18" Grid.Row="1"/>







                        <!--Title-->

                        <TextBlock Text="Change password"
                                       Grid.Row="1"
                                       FontWeight="DemiBold"
                                       FontSize="12" Margin="127,10,128,392"
                                       />

                        <!--Description-->

                        <TextBlock Text="Feel free yo change your paassword"
                                       Grid.Row="1"                                     
                                       FontSize="10"
                                       Foreground="Gray"
                                       Height="15"
                                       Margin="100,33,92,373"
                                       RenderTransformOrigin="0.503,1.111"
                                       />
                        <TextBlock Text="Don't forget it, Thank you!!!"
                              Grid.Row="1"                                     
                              FontSize="10"
                              Foreground="Gray"
                              Height="15" Margin="116,53,102,353" 
                              RenderTransformOrigin="0.503,1.111"
                              />

                        <!--Email textbox-->


                        <TextBox x:Name="FirstPassword"
                                Style="{StaticResource TextBoxes}" 
                                Margin="84,170,72,225"
                                MaxLength="20"
                                PreviewKeyDown="FirstPassword_PreviewKeyDown"
                                BorderBrush="#727272" Grid.Row="1" 
                                />



                        <!--OTP textbox-->

                        <TextBox x:Name="ConfirmPassword"
                                Style="{StaticResource TextBoxes}" 
                                Margin="84,266,70,130"
                                MaxLength="20"
                                PreviewKeyDown="FirstPassword_PreviewKeyDown"
                                BorderBrush="#727272" Grid.Row="1" 
                                />

                        <!--Login button-->

                        <Button x:Name="ChangepassWordBtn" 
                                 Style="{StaticResource SubmitButton}" 
                                 Margin="83,318,0,78" 
                                 Width="196"
                                 Content="Change"
                                 BorderThickness="0"
                                 Click="ChangepassWordBtn_Click"
                                 Grid.Row="1" HorizontalAlignment="Left"
                                 />


                    </Grid>
                </Grid>
            </Grid>


        </Border>

    </Border>
</Window>
