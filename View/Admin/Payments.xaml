<UserControl x:Class="GYM_CLIENT.View.Admin.Payments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GYM_CLIENT.View.Admin" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             Loaded="UserControl_Loaded"
             >

    <Border Background="#F4F5F6">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <!--Header -->
            <Border Grid.Row="0" 
                    BorderThickness="0.5" 
                    BorderBrush="Gray" 
                    Background="White"
                    CornerRadius="5"
                    Margin="2"
                    >

                <Grid>

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="100"/>

                    </Grid.ColumnDefinitions>

                    <!-- Left-aligned Export Button -->
                    <Button x:Name="ExportBtn"
                        Style="{StaticResource CrudButton}"
                        BorderBrush="Gray"
                        Cursor="Hand"
                        BorderThickness="0.5"
                        Margin="10,0,0,0"
                        Width="41"
                        Grid.Column="0"
                        Click="ExportBtn_Click"
                        HorizontalAlignment="Left">
                        <Icon:PackIconMaterial 
                            x:Name="MaximizeWindow"
                            Kind="Printer" 
                            Height="10" 
                            Width="12"
                            Foreground="#313638"
                            Style="{StaticResource WindowControlIcon}"
                            Cursor="Hand" />
                    </Button>
                    <Border Grid.Column="0">

                        <Label Content="Search:" Height="30"
                                FontSize="16"
                               HorizontalAlignment="Right"
                         Margin="4"/>

                    </Border>

                    <Border Grid.Column="1">

                        <TextBox x:Name="Search" Height="30"
                                 MaxLength="15" 
                                 FontSize="16"
                                 TextChanged="Search_TextChanged"
                                 Margin="4"/>

                    </Border>

                    <Border Grid.Column="2">
                        <Button x:Name="NewClientButton"
                          Style="{StaticResource CrudButton}"
                          Cursor="Hand"
                          Margin="0,0,10,0"
                          Width="90"
                          BorderThickness="0"
                          Background="#0b8707"
                          Grid.Column="1"
                          HorizontalAlignment="Right"
                          Click="NewClientButton_Click">

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="New Payment" 
                                     VerticalAlignment="Center"
                                      Margin="0,0,5,0"
                                      Foreground="White"
                                     />
                                <Icon:PackIconMaterial 
                                      x:Name="IconAdd"
                                      Kind="Plus" 
                                      Height="10"
                                      Width="10"
                                      Margin="0"
                                      Foreground="White"
                                      Style="{StaticResource WindowControlIcon}" />     
                            </StackPanel>
                        </Button>

                    </Border>
                    
                </Grid>
                
               


            </Border>
            
            <!--Content-->
            <Border Grid.Row="1"
                     BorderThickness="0.5" 
                     BorderBrush="Gray" 
                     Background="White"
                     CornerRadius="5"
                     Margin="2"
                    >
                <Border Grid.Row="1">
                    <!--Employee Table-->

                    <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                         ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                         CellStyle="{DynamicResource DataGridCellStyle1}" 
                         x:Name="ClientsPayment" Style="{DynamicResource DataGridStyle1}"
                         AutoGenerateColumns="False">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Id" CanUserResize="False"  Binding="{Binding PaymentId}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Client" CanUserResize="False"  Binding="{Binding ClientName}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="PaymentType" CanUserResize="False"  Binding="{Binding PaymentType}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Contract" CanUserResize="False"  Binding="{Binding PlanName}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Amount" CanUserResize="False"  Binding="{Binding AmountPaid}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Date" CanUserResize="False"  Binding="{Binding PaymentDate,StringFormat='yyyy-MM-dd'}" IsReadOnly="True" Width="*"/>
                       
                            <!--<DataGridTemplateColumn Header="Action" CanUserResize="False" IsReadOnly="True" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button x:Name="editBtn" Click="editBtn_Click"  Style="{StaticResource gridEditButton}"
                                     >
                                                <Icon:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}"/>
                                            </Button>
                                            <Button Margin="5 0 0 0" Style="{StaticResource gridRemoveButton}" Click="Button_Click"
                                         >
                                                <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>-->
                        </DataGrid.Columns>
                    </DataGrid>

                </Border>


            </Border>
            
            <!--Footer-->
            <Border Grid.Row="3"
              BorderThickness="0.5" 
              BorderBrush="Gray" 
              CornerRadius="5"
              Margin="2"
              Background="White"
             >


            </Border>
        </Grid>
        
    </Border>
    
</UserControl>
