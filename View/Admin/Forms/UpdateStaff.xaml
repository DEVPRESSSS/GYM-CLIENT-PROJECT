<Window x:Class="GYM_CLIENT.View.Admin.Forms.UpdateStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GYM_CLIENT.View.Admin.Forms" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="UpdateStaff"      
        WindowStyle="None"        
         Height="450"
         Width="800"
         WindowStartupLocation="CenterScreen"
         AllowsTransparency="True"
         Background="Transparent">
    <Border CornerRadius="10" Background="White" BorderThickness="1" BorderBrush="Gray">

        <!---->

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Color of header-->

            <Border Grid.Row="0" CornerRadius="9,9,0,0" Background="Black">


            </Border>

            <!--Row 2 wrapper-->

            <Border Grid.Row="1">
                <Grid>

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>


                    <!--Column 1-->
                    <Border Grid.Column="0">

                        <!--Image Icon-->

                        <!--Image for the first column of row 2-->
                        <Image Grid.Row="1"
                 Grid.Column="0"
                 HorizontalAlignment="Left" Stretch="Fill"
                  Source="pack://application:,,,/Resources/FormIcon.png"
                 />

                    </Border>

                    <Border Grid.Column="1" CornerRadius="10" Background="#F4F5F6">


                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="427*"/>
                                <ColumnDefinition Width="23*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                                <RowDefinition Height="40"/>

                            </Grid.RowDefinitions>

                            <!--Header Area-->
                            <Border Grid.Row="0" CornerRadius="0,0,10,10" Background="White" Grid.ColumnSpan="2" >

                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="30"/>

                                    </Grid.ColumnDefinitions>

                                    <!--Close button-->
                                    <Button x:Name="CloseBtn"
                                       Style="{StaticResource MinimizeButtonStyle}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,4,0"
                                       Cursor="Hand"
                                       Click="CloseBtn_Click">


                                        <Icon:PackIconMaterial 
                                        Kind="Close" 
                                        VerticalAlignment="Center"
                                        Height="10"
                                        HorizontalAlignment="Right"
                                        Width="16"
                                    />

                                    </Button>



                                </Grid>

                            </Border>


                            <!--Form Area-->
                            <Border Grid.Row="1" CornerRadius="10" Margin="8,8,8,8" Background="White" Grid.ColumnSpan="2">

                                <Grid>
                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition/>
                                        <ColumnDefinition/>

                                    </Grid.ColumnDefinitions>

                                    <!--Left side column fields area-->
                                    <Border Grid.Column="0" Margin="10">

                                        <StackPanel Orientation="Vertical">

                                            <!--Client-->
                                            <Label Content="Staff name*"/>

                                            <TextBox/>

                                            <!--Contact-->
                                            <Label Content="Contact*"/>

                                            <TextBox/>

                                            <!--Gmail-->
                                            <Label Content="Gmail*"/>

                                            <TextBox/>

                                        </StackPanel>

                                    </Border>

                                    <!--Right side column fields area-->
                                    <Border Grid.Column="1"  Margin="10">

                                        <StackPanel Orientation="Vertical">

                                            <!--Username-->
                                            <Label Content="Username"/>

                                            <TextBox/>

                                            <!--Password-->
                                            <Label Content="Password*"/>

                                            <TextBox/>


                                            <!--Role-->
                                            <Label Content="Role*"/>

                                            <ComboBox/>

                                        </StackPanel>

                                    </Border>


                                </Grid>

                            </Border>

                            <!--Footer area-->
                            <Border Grid.Row="2" Background="White" CornerRadius="0,0,10,0" Grid.ColumnSpan="2">


                                <Button x:Name="LoginBtn" Grid.Column="1" 
                         Style="{StaticResource SubmitButton}" 
                         Width="430"
                         Content="Submit"
                         Cursor="Hand"
                         BorderThickness="0" HorizontalAlignment="Center" Margin="0,8,0,7"
                         />
                            </Border>

                        </Grid>



                    </Border>

                </Grid>

            </Border>
        </Grid>


    </Border>
</Window>
