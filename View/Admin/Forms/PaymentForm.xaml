<Window x:Class="GYM_CLIENT.View.Admin.Forms.PaymentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GYM_CLIENT.View.Admin.Forms" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="PaymentForm" 
        Height="490" 
        Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        >

    <Border Background="#F4F5F6"
            BorderBrush="Gray"
            BorderThickness="0.5"
            CornerRadius="10"
            >

        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="50"/>

            </Grid.RowDefinitions>
            
            <!--Header-->
            <Border Grid.Row="0"
                    CornerRadius="9,9,0,0"
                    Background="#313638"
                    >

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>


                    <!--Close button-->
                    <Button x:Name="CloseBtn"
                                       Style="{StaticResource MinimizeButtonStyle}"
                                       Grid.Column="2"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,4,0"
                                       Cursor="Hand"
                                       Click="CloseBtn_Click">


                        <Icon:PackIconMaterial 
                                            Kind="Close" 
                                            VerticalAlignment="Center"
                                            Height="10"
                                            HorizontalAlignment="Right"
                                            Width="16"
                                        />

                    </Button>
                </Grid>
                
            </Border>
            
            <!--Scanner-->
            <Border Grid.Row="1">

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <!--Camera Border-->
                    <Border BorderBrush="Gray"
                            Background="White"
                            BorderThickness="0.5"
                            Margin="6"
                            Grid.Column="1"
                             CornerRadius="10" >

                        <Image x:Name="CameraImage" 
                               Stretch="Fill"/>


                    </Border>
                </Grid>
                
            </Border>
            
            <!--Content-->
            <Border Grid.Row="2"
                    Background="White"
                    Margin="10"
                    CornerRadius="5"
                    >
                <StackPanel Orientation="Vertical">
                     <!--Client name-->
                     <Label Content="Client(Optional if client is not member)"/>
                    <TextBox Style="{StaticResource TextBoxes}"
                             MaxLength="30"
                             />

                      <!--PaymentType-->
                      <Label Content="PaymentType"/>
                    <ComboBox Height="30">
                        <ComboBoxItem Content="Cash"/>
                        <ComboBoxItem Content="Gcash"/>
                    </ComboBox>

                    <!--PlanName-->
                    <Label Content="Membership Price"/>
                    <TextBox IsReadOnly="True" Style="{StaticResource TextBoxes}"
                      MaxLength="6"
                      />


                    <!--Client name-->
                    <Label Content="Amount"/>
                    <TextBox Style="{StaticResource TextBoxes}"
                         MaxLength="6"
                         />

                    <!--Change-->
                    <Label Content="Change"/>
                    <TextBox IsReadOnly="True"
                      Style="{StaticResource TextBoxes}"
                      MaxLength="6"
                      />


                </StackPanel>
              
           

                
            </Border>
            
            <!--Footer-->
            <Border Grid.Row="3"
                    CornerRadius="0,0,9,9"
                    BorderBrush="Gray"
                    Background="White"
                    BorderThickness="0.5"
                    >
                <Button x:Name="Submit" Grid.Column="1" 
                      Style="{StaticResource SubmitButton}" 
                      Content="Pay"
                      Cursor="Hand"
                      Background="Green"
                      Click="Submit_Click"
                      BorderThickness="0" 
                      HorizontalAlignment="Center" Margin="0,12,0,12" Width="278" 
                  />

            </Border>
        </Grid>
        
    </Border>
    
</Window>
