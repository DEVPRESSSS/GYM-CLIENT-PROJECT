<UserControl x:Class="GYM_CLIENT.View.Admin.Staff"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GYM_CLIENT.View.Admin" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Border x:Name="PageBorder" Background="White"
            >


        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Border
             Background="#F4F5F6"
             BorderThickness="0,0,0,1"
             Grid.Row="0">

                <Grid>

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="100"/>

                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0">

                        <Label Content="Search:" Height="30"
                               FontSize="16"
                               HorizontalAlignment="Right"
                               Margin="4"/>

                    </Border>

                    <Border Grid.Column="1">

                        <TextBox x:Name="Search" Height="30"
                         MaxLength="15" 
                         FontSize="16"
                         TextChanged="Search_TextChanged"
                         Margin="4"/>

                    </Border>

                    <Border Grid.Column="2">
                        <Button x:Name="NewClientButton"
                          Style="{StaticResource CrudButton}"
                          Cursor="Hand"
                          Margin="0,0,10,0"
                          Width="90"
                          BorderThickness="0"
                          Background="#0b8707"
                          Grid.Column="1"
                          HorizontalAlignment="Right"
                          Click="StaffBtn_Click">

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="New Staff" 
                                      VerticalAlignment="Center"
                                      Margin="0,0,5,0"
                                      Foreground="White"
                                     />
                                <Icon:PackIconMaterial 
                                      x:Name="IconAdd"
                                      Kind="Plus" 
                                      Height="10"
                                      Width="10"
                                      Margin="0"
                                      Foreground="White"
                                      Style="{StaticResource WindowControlIcon}" />
                            </StackPanel>
                        </Button>

                    </Border>

                </Grid>
            </Border>


            <Border Grid.Row="1">
                <!--Employee Table-->

                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                       ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                       CellStyle="{DynamicResource DataGridCellStyle1}" 
                       x:Name="StaffGrid"
                       Style="{DynamicResource DataGridStyle1}"                
                       AutoGenerateColumns="False">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="StaffId" CanUserResize="False"  Binding="{Binding StaffId}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Name" CanUserResize="False"  Binding="{Binding Name}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Contact" CanUserResize="False"  Binding="{Binding Contact}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Role" CanUserResize="False"  Binding="{Binding RoleName}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Username" CanUserResize="False" Binding="{Binding Username}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Created" CanUserResize="False" Binding="{Binding Created,StringFormat='yyyy-MM-dd'}" IsReadOnly="True" Width="*"/>

                        <DataGridTemplateColumn Header="Action" CanUserResize="False" IsReadOnly="True" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="editBtn" Style="{StaticResource gridEditButton}" Click="editBtn_Click" >
                                            <Icon:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}"/>
                                        </Button>
                                        <Button Margin="5 0 0 0" Style="{StaticResource gridRemoveButton}"
                                             Click="Button_Click">
                                            <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Border>
        </Grid>


    </Border>
</UserControl>
