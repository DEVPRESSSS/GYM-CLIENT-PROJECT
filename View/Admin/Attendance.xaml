<UserControl x:Class="GYM_CLIENT.View.Admin.Attendance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GYM_CLIENT.View.Admin" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Loaded="UserControl_Loaded"
             >
    
    <Border x:Name="PageBorder" Background="White">


        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Border
               Background="#F4F5F6"
               BorderThickness="0,0,0,1"
               Grid.Row="0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left-aligned -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right-aligned -->
                    </Grid.ColumnDefinitions>


                    <!-- Right-aligned New Button -->
                    <Button x:Name="CameraBtn"
                       Style="{StaticResource CrudButton}"
                       Cursor="Hand"
                       Margin="0,0,10,0"
                       Width="60"
                       BorderThickness="0"
                       Background="#0b8707"
                       Grid.Column="1"
                       Click="CameraBtn_Click"
                       HorizontalAlignment="Right"
                       >

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Scan" 
                              VerticalAlignment="Center"
                              Margin="0,0,5,0"
                               Foreground="White"
                              />
                            <Icon:PackIconMaterial 
                               x:Name="IconAdd"
                               Kind="Camera" 
                               Height="10"
                               Width="10"
                               Margin="0"
                               Foreground="White"
                               Style="{StaticResource WindowControlIcon}" />
                        </StackPanel>
                    </Button>

                </Grid>
            </Border>


            <Border Grid.Row="1">
                <!--Employee Table-->

                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                 ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                 CellStyle="{DynamicResource DataGridCellStyle1}" 
                 x:Name="ClientAttendance" Style="{DynamicResource DataGridStyle1}"
                 AutoGenerateColumns="False">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="ClientId" CanUserResize="False"  Binding="{Binding ClientId}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Name" CanUserResize="False"  Binding="{Binding FullName}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="CheckOutTime" CanUserResize="False"  Binding="{Binding CheckInTime}" IsReadOnly="True" Width="*"/>
                
                       
                    </DataGrid.Columns>
                </DataGrid>

            </Border>
        </Grid>


    </Border>
</UserControl>
