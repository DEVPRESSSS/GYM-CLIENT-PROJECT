<UserControl x:Class="GYM_CLIENT.View.Admin.Attendance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GYM_CLIENT.View.Admin" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Loaded="UserControl_Loaded"
             >
    
    <Border x:Name="PageBorder" Background="White">


        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Border
               Background="#F4F5F6"
               BorderThickness="0,0,0,1"
               Grid.Row="0">

                <Grid>

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="100"/>

                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0">

                        <Label Content="Search:" Height="30"
                          FontSize="16"
                          HorizontalAlignment="Right"
                          Margin="4"/>

                    </Border>

                    <Border Grid.Column="1">

                        <TextBox x:Name="Search" Height="30"
                          MaxLength="15" 
                          FontSize="16"
                          TextChanged="Search_TextChanged"
                          Margin="4"/>

                    </Border>

                    <Border Grid.Column="2">
                        <Button x:Name="CameraBtn"
                               Style="{StaticResource CrudButton}"
                               Cursor="Hand"
                               Margin="0,0,10,0"
                               Width="90"
                               BorderThickness="0"
                               Background="#0b8707"
                               Grid.Column="1"
                               HorizontalAlignment="Right"
                               Click="CameraBtn_Click">

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Scan QR" 
                                  VerticalAlignment="Center"
                                   Margin="0,0,5,0"
                                   Foreground="White"
                                  />
                                <Icon:PackIconMaterial 
                                   x:Name="IconAdd"
                                   Kind="Scanner" 
                                   Height="10"
                                   Width="10"
                                   Margin="0"
                                   Foreground="White"
                                   Style="{StaticResource WindowControlIcon}" />
                            </StackPanel>
                        </Button>

                    </Border>

                </Grid>
            </Border>


            <Border Grid.Row="1">
                <!--Employee Table-->

                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                 ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                 CellStyle="{DynamicResource DataGridCellStyle1}" 
                 x:Name="ClientAttendance" Style="{DynamicResource DataGridStyle1}"
                 AutoGenerateColumns="False">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="ClientId" CanUserResize="False"  Binding="{Binding ClientId}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Name" CanUserResize="False"  Binding="{Binding FullName}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="CheckInTime" CanUserResize="False"  Binding="{Binding CheckInTime}" IsReadOnly="True" Width="*"/>
                
                       
                    </DataGrid.Columns>
                </DataGrid>

            </Border>
        </Grid>


    </Border>
</UserControl>
