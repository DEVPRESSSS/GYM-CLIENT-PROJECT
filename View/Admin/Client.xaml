<UserControl x:Class="GYM_CLIENT.View.Admin.Client"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GYM_CLIENT.View.Admin" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
            >
    
    <Border x:Name="PageBorder" Background="White">


        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Border
                  Background="#F4F5F6"
                  BorderThickness="0,0,0,1"
                  Grid.Row="0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left-aligned -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right-aligned -->
                    </Grid.ColumnDefinitions>

                    <!-- Left-aligned Export Button -->

                    <!-- Right-aligned New Button -->
                    <Button x:Name="NewClientButton"
                      Style="{StaticResource CrudButton}"
                      Cursor="Hand"
                      Margin="0,0,10,0"
                      Width="60"
                      BorderThickness="0"
                      Background="#0b8707"
                      Grid.Column="1"
                      HorizontalAlignment="Right"
                      Click="NewClientButton_Click">

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Add" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,5,0"
                                  Foreground="White"
                                 />
                            <Icon:PackIconMaterial 
                              x:Name="IconAdd"
                              Kind="Plus" 
                              Height="10"
                              Width="10"
                              Margin="0"
                              Foreground="White"
                              Style="{StaticResource WindowControlIcon}" />
                        </StackPanel>
                    </Button>

                </Grid>
            </Border>


            <Border Grid.Row="1">
                <!--Employee Table-->

                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                    ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                    CellStyle="{DynamicResource DataGridCellStyle1}" 
                    x:Name="Clients" Style="{DynamicResource DataGridStyle1}"
                    ItemsSource="{Binding MembersCollection}"
                    SelectedItem="{Binding SelectedClient}"
                    AutoGenerateColumns="False">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="ClientId" CanUserResize="False"  Binding="{Binding ClientId}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Name" CanUserResize="False"  Binding="{Binding FullName}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Contact" CanUserResize="False"  Binding="{Binding Contact}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Trainee" CanUserResize="False"  Binding="{Binding TraineeName}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Plan" CanUserResize="False"  Binding="{Binding PlanName}" IsReadOnly="True" Width="*"/>
                        <DataGridTemplateColumn Header="AccessCard" CanUserResize="False" IsReadOnly="True" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="GenerateQRbtn" Click="GenerateQRbtn_Click"  Style="{StaticResource gridEditButton}"
       >
                                            <Icon:PackIconMaterial Kind="Card" Style="{StaticResource gridButtonIcon}"/>
                                        </Button>
                                     
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Action" CanUserResize="False" IsReadOnly="True" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="editBtn" Click="editBtn_Click"  Style="{StaticResource gridEditButton}"
                                            >
                                            <Icon:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}"/>
                                        </Button>
                                        <Button Margin="5 0 0 0" Style="{StaticResource gridRemoveButton}" Click="Button_Click"
                                                >
                                            <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Border>
        </Grid>


    </Border>
</UserControl>
